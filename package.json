{
  "name": "@devade/design-system",
  "version": "0.0.5",
  "private": false,
  "preinstall": "npx only-allow pnpm",
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=@repo/docs^... && changeset publish",
    "preview-storybook": "turbo run preview-storybook"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.2.5",
    "turbo": "^2.5.0"
  },
  "description": "devade design system",
  "main": "index.js",
  "dependencies": {
    "eslint-plugin-storybook": "^0.8.0",
    "storybook": "^8.2.6"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lari-ks/turbo-design-system.git"
  },
  "keywords": [
    "design",
    "system",
    "devade"
  ],
  "author": "lara sweeney",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lari-ks/turbo-design-system/issues"
  },
  "homepage": "https://github.com/lari-ks/turbo-design-system#readme"
}
